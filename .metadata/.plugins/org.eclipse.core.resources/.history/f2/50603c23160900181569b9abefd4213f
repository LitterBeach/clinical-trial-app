import java.io.FileReader;
import java.io.IOException;
import java.io.Reader;
import java.lang.reflect.Type;
import java.util.*;

import com.google.gson.*;

public class FileHandler {
	ArrayList<Patient> patients = new ArrayList<>();
	// TODO add file selector to upload a json file.
	private static String fileLocation = ".\\assignment_1_example.json";

	private class PatientReadings {
		ArrayList<ReadingJson> patient_readings;
	}

	private class ReadingJson {
	String patient_id;
	String reading_type;
	String reading_id;
	String reading_value;
	String reading_date;
	}

	public static void main(String[] args) {
		Gson gson = new GsonBuilder().serializeNulls().create();

		try (Reader fileReader = new FileReader(fileLocation)) {
			PatientReadings readingList = gson.fromJson(fileReader, PatientReadings.class);
			System.out.println(readingList.patient_readings.get(0).getPatient_id());

		} catch (IOException e) {
			e.printStackTrace();
		}

	}

}
